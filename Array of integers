#include<stdio.h>
void main()
{
int a[6];
printf("enter the elements of array");
scanf("%d%d%d%d",&a[0],&a[1],&a[2],&a[3]);
int max=a[0],min=a[0],sum=0;
float avg;
int i;
for(i=0;i<4;i++)
{
if(a[i]>max)
max=a[i];
}
for(i=0;i<4;i++)
{
if(a[i]<min)
min=a[i];
}
for(i=0;i<4;i++)
{
sum=sum+a[i];
}
avg=sum/4;
printf("\nthe max num is %d",max);
printf("\nthe min num is %d",min);
printf("\nthe sum is %d",sum);
printf("the average is %f",avg);
//return;
}

output:
enter the elements of array
1 2 3 4
the max num is 4
the min num is 1
the sum is 10the average is 2.000000
